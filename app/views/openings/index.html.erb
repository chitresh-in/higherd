<p id="notice"><%= notice %></p>

<h1>Openings</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Ctc</th>
      <th>Location</th>
      <th>Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @openings.each do |opening| %>
      <tr>
        <td><%= opening.profile %></td>
        <td><%= opening.ctc %></td>
        <td><%= opening.location %></td>
        <td><%= opening.deadline %></td>
        <td><%= link_to 'Show', opening %></td>
        <td><%= link_to 'Edit', edit_opening_path(opening) %></td>
        <td><%= link_to 'Destroy', opening, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opening', new_opening_path %>
